{
  "name": "ephemeral-github-runner-action",
  "version": "1.0.0",
  "description": "Javascript github action to deploy and destroy self-hosted runners.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "prepare": "ncc build src/index.js -o dist --source-map --license licenses.txt",
    "all": "npm run lint && npm run prepare && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LorenzoDrudi/ephemeral-github-runner-action"
  },
  "git-pre-hooks": {
    "pre-push": "npm run prepare && git add dist && git commit -m 'Add dist folder.' && git push --no-verify"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript",
    "Pulumi",
    "DevOps",
    "Runners"
  ],
  "author": "Celina Cywinska & Lorenzo Drudi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LorenzoDrudi/ephemeral-github-runner-action/issues"
  },
  "homepage": "https://github.com/LorenzoDrudi/ephemeral-github-runner-action/blob/main/README.md",
  "dependencies": {
    "@actions/core": "^1.2.5",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.0.3"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.31.1",
    "eslint": "^8.20.0",
    "git-pre-hooks": "^1.2.1"
  }
}
